<Window x:Class="RobocoinEmbedded.Config"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Config" Height="300" Width="600"
        Closing="Window_Closing">
    <Grid DataContext="StaticResource apiCredentials">

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="80"/>
            <ColumnDefinition MinWidth="50"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="API Key:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ApiKeyText"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="API Secret:" />
        <TextBox Grid.Row="1"  Grid.Column="1" x:Name="ApiSecretText"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="URL:"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="uri"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="API Host:"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="ApiHost"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Machine ID:"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="MachineId"/>
        
    </Grid>
</Window>
